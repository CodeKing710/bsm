#!/bin/bash

# BSM's installer
install() {
  local repo=$(find $HOME -type d -name bsm)
  cp -f $repo/bsm $HOME/bin || return false
  cp -f $repo/.bsm/.lib $HOME/.bsm || return false
  cp -f $repo/.bsm/help $HOME/.bsm || return false
  cp -f $repo/.bsm/version $HOME/.bsm || return false
  [[ ! `cat $HOME/.bashrc` =~ "# BSM PATH ADD" ]] && ( echo -e "# BSM PATH ADD\nexport PATH=\"\$HOME/scripts:\$PATH\"" >> $HOME/.bashrc || return false )
  echo "BSM installed!"
}

install || echo "Install failed!"
